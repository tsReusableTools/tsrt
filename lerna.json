{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "0.1.0",
  "stream": true,
  "command": {
    "bootstrap": {
      "hoist": false
    },
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    },
    "publish": {
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md",
        "**/yarn.lock"
      ],
      "registry": "https://registry.npmjs.org"
    }
	}
}
