{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "stream": true,
  "command": {
    "bootstrap": {
      "hoist": false
    },
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    }
  }
}
